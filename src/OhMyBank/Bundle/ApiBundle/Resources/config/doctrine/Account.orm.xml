<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping">

    <entity
        table="account"
        name="OhMyBank\Bundle\ApiBundle\Entity\Account"
        repository-class="OhMyBank\Bundle\ApiBundle\Repository\AccountRepository"
        >
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="name" type="string" />
        <field name="initialBalance" column="initial_balance" type="float"/>
    </entity>

</doctrine-mapping>